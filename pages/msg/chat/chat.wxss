.page-chat {
  display: flex;
  flex-direction: column;
}

.page-title {
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 64px;
  justify-content: center;
  align-items: flex-end;
  flex-grow: 1;
}
.page-title navigator {
  width: 9px;
height: 15px;
margin-right: auto;
position: relative;
left: 15px;
margin-bottom: 15px;
}
.page-title image {
  width: 9px;
  height: 15px;
}

.page-title text {
  margin-bottom: 11px;
  margin-right: auto;

}

.chat-body {
  margin-top: 64px;
  display: flex;
  height: 80vh;
  flex-direction: column;
  background: #F5F5F5;
}

.chat-time {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 36px;
  font-size: 11px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A3A3A3;
  line-height: 16px;
}

.rec-msg {
  display: flex;
  height: 64px;
  margin-right: 16px;
  box-sizing: border-box;
}

.chat-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-left: 13px;
  margin-right: 14px;
}

.chat-avatar image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.chat {
  background: #FFFFFF;
  border-radius: 0px 5px 5px 5px;
  display: flex;
  max-width: 80%;
  height: 54px;
  margin-top: auto;
}

.chat text {
  font-size: 13px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 18px;
  margin-top: 7px;
  margin-left: 11px;
  margin-right: 15px;
}

.sent-msg {
  display: flex;
  flex-direction: row-reverse;
  height: 48px;
  margin-top: 20px;
}

.sent-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 15px;
  margin-left: 10px;
}

.sent-avatar image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.sent-chat {
  display: flex;
  max-width: 80%;
  height: 38px;
  margin-top: auto;
  width: 86px;
  background: #8CC7C8;
  border-radius: 0px 5px 5px 5px;
}

.sent-chat text {
  font-size: 13px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 18px;
  margin-top: 9px;
  margin-left: 25px;
  margin-right: 19px;
  margin-bottom: 9px;
}

.chat-form {
  width: 375px;
  height: 72px;
  background: #FFFFFF;
  box-shadow: 0px -1px 0px 0px rgba(0, 0, 0, 0.05);
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  flex-grow: 1;
}

.voice {
  width: 20px;
  height: 20px;
}

.voice image {
  width: 20px;
  height: 20px;
}

.more {
  width: 20px;
  height: 20px;
}

.more image {
  width: 20px;
  height: 20px;
}

.typein {
  width: 66%;
  height: 36px;
  background: #F9F9F9;
  border-radius: 5px;
}