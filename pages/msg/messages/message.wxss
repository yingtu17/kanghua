.msg-page-title {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  margin-top: 30px;
  margin-bottom: 12px;
}

.msg-page-title text {
  font-size: 16px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 22px;
}

.messages {
  display: flex;
  flex-direction: column;
}

.message {
  display: flex;
  align-items: center;
  padding: 24rpx 24rpx;
}

.msg-avatar {
  width: 45px;
  height: 45px;
  border-radius: 50%;
  position: relative;
}

.msg-avatar image {
  width: 45px;
  height: 45px;
  border-radius: 50%;
}

.msg-texts {
  display: flex;
  flex-direction: column;
  margin-left: 24rpx;

}

.msg-name {
  font-size: 15px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 21px;
  margin-bottom: 1px;
}

.msg-prev {

  height: 18px;
  font-size: 13px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A3A3A3;
  line-height: 18px;
}

.kong {
  width: 100%;
  height: 2px;
  background-color: #f9f9f9;
  margin-left: 68px;
}

.number {
  font-size: 10px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 14px;
  width: 16px;
height: 12px;
background: #EA3B5C;
border-radius: 6px;
border: 1px solid #FFFFFF;
position: absolute;
right: 0;
top: 0;
display: flex;
justify-content: center;
align-items: center;
}